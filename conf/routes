# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index(request: play.mvc.Http.Request)
GET     /sprawy                     controllers.HomeController.pokazSprawy()
GET     /sprawy/doUzupelnienia      controllers.HomeController.pokazSprawyDoUzupelnienia()
GET     /sprawy/archiwalne          controllers.HomeController.pokazSprawyArchiwalne()
GET     /sprawy/dodaj               controllers.HomeController.dodajSprawe(request: play.mvc.Http.Request)
GET     /sprawy/edytuj/:id          controllers.HomeController.edytujSprawe(id: Integer)
GET     /sprawy/wydajDecyzje/:id    controllers.HomeController.wydajDecyzje(request: play.mvc.Http.Request, id: Integer)
PUT     /sprawy/aktualizuj          controllers.HomeController.aktualizujSprawe()
POST    /login                      controllers.HomeController.zaloguj(request: play.mvc.Http.Request)
POST    /sprawy/zapiszDecyzje       controllers.HomeController.zapiszDecyzje(request: play.mvc.Http.Request)
POST    /sprawy/zapiszSprawe        controllers.HomeController.zapiszSprawe(request: play.mvc.Http.Request)
DELETE  /sprawy/usunSprawe/:id      controllers.HomeController.usunSprawe(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
